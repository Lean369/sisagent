# Ejemplo de archivo .env para SisAgent (NO guardar secretos reales aquí)

# LLM Configuration
LLM_PROVIDER=gemini
LLM_PROVIDER_FALLBACK=openai

# API Keys (ponga valores reales en .env local)
GEMINI_API_KEY=your_gemini_api_key_here
HUGGINGFACE_API_KEY=your_hf_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://evoapi.sisnova.com.ar
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE=prueba-py-agent
EVOLUTION_INSTANCE_ID=your_instance_uuid_here

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL para métricas
DB_HOST_METRICS=localhost
DB_NAME_METRICS=sisbot_cliente_1
DB_USER_METRICS=sisbot_user
DB_PASSWORD_METRICS=postgres_password
DB_PORT_METRICS=5432

# Configuración de Webhook de Monitoreo
# Modo: 'pull' (el agente envía métricas) o 'push' (el sistema externo las envía al agente)
MONITORING_WEBHOOK_URL=https://monitoring.example.com/webhook
MONITORING_WEBHOOK_INTERVAL_MINUTES=60
MONITORING_WEBHOOK_MODE=pull

# Si usa modo push, puede configurar un token que el sistema de monitoreo enviará
# en el header `X-MONITORING-TOKEN` para autenticar el POST.
MONITORING_PUSH_TOKEN=your_monitoring_push_token_here

# Ejemplo de payload que el sistema de monitoreo debe enviar en modo push:
# {
#   "timestamp": "2026-01-26T00:00:00Z",
#   "source": "monitoring",
#   "stats_general": {"messages": 123, "errors": 2},
#   "stats_hourly": [{"hour": "2026-01-25T23:00:00Z", "messages": 10}],
#   "top_users": [],
#   "periodo": "mes_2026-01"
# }

# Opcional: token de administración para endpoints /admin (recomendado en producción)
# ADMIN_TOKEN=your_admin_token_here

# Otros ajustes comunes
MAX_MESSAGES=50
TRANSCRIPTION_ENABLED=false
DDOS_PROTECTION_ENABLED=true

# END
